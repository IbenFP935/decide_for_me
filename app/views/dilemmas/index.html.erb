<div class="container">
  <div>
    <h1>Dilemmas</h1>
    <div class="cards">
      <% @dilemmas.each do |dilemma| %>
        <% if dilemma.easy? %>
          <div class="card-category" style="background-color: $easy">
          <%= dilemma.question %><%= link_to dilemma_path(dilemma) %>
          </div>
        <% elsif dilemma.medium? %>
          <div class="card-category" style="background-color: $medium">
          <%= dilemma.question %>
          </div>
        <% else %>
          <div class="card-category" style="background-color: $hard">
          <%= dilemma.question %>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= link_to "Post a new dilemma", new_dilemma_path %>
  </div>
</div>

