<div class="container">
  <div>
    <h1>Dilemmas</h1>
    <div class="cards">
      <% @dilemmas.each do |dilemma| %>
        <% if dilemma.easy? %>
          <div class="m-3">
            <div class="easy card-category-easy card-note-text">
              <%= link_to "#{dilemma.question.capitalize}", dilemma_path(dilemma) %>
            </div>
          </div>
        <% elsif dilemma.medium? %>
          <div class="m-3">
            <div class="medium card-category-medium card-note-text">
              <%= link_to "#{dilemma.question.capitalize}", dilemma_path(dilemma) %>
            </div>
          </div>
        <% elsif dilemma.hard? %>
          <div class="m-3">
            <div class="hard card-category-hard card-note-text">
              <%= link_to "#{dilemma.question.capitalize}", dilemma_path(dilemma) %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= link_to "Post a new dilemma", new_dilemma_path %>
  </div>
</div>
