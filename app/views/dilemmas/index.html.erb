<div class="container-fluid">
  <% if @dilemmas.empty? %>
    <div class="text-center mt-5">
      <%= link_to ">> No results found ðŸ¤–. Try again <<", dilemmas_path %>
    </div>
  <% else %>
    <div class="form-inline ml-3 mb-3">
      <%= form_tag dilemmas_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "What's on your mind?"%>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
    <!-- Dilemmas -->

      <!-- Dilemmas active-->

        <div class="dilemmas-container d-flex" id="main-block">

            <% @dilemmas.each do |dilemma| %>
              <% if dilemma.can_users_vote? %>
                <div class="col-6">
                  <div class="mt-3 mb-4 active-parent card-ghost <%= dilemma.category %> card-category-<%= dilemma.category %> card-note-text">
                    <p class="active-child badge badge-primary">Active</p>
                    <% if dilemma.easy? %>
                      <p class="px-2 py-1 d-inline little-text-border">1 DAY</p>
                    <% elsif dilemma.medium? %>
                      <p class="px-2 py-1 d-inline little-text-border mt-0">3 DAYS</p>
                    <% elsif dilemma.hard? %>
                      <p class="px-2 py-1 d-inline little-text-border">7 DAYS</p>
                    <% end %>
                    <div class="mt-1" id="min-card-width"><%= link_to "#{dilemma.question}", dilemma_path(dilemma) %></div>
                    <p class="font-italic little-text">Created by <strong><%= dilemma.user.username %></strong></p>
                  </div>
                </div>
              <% end %>
            <% end %>

        </div>


    </div>
  <% end %>
</div>


